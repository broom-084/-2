<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  
  <div class="actions">
    <%= f.button "Update Book" %>
  </div>
  
  <a class="show" href="/books/show">Show</a>
  "|"
  <a class="back" href="/books">Back</a>
<% end %>